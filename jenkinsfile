node{
buildName 'Dev - Build - $(BUILD_NUMBER)'
buildDescription 'PIPline-script-scriptedway '
def mavenHome = tool name: "maven1"
echo "The node name is: ${env.NODE_NAME} "
echo "The job name is: ${env.JOB_NAME} "
echo "The job number is: ${env.BUILD_NUMBER} "
properties([buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')), [$class: 'JobLocalConfiguration', changeReasonComment: ''], pipelineTriggers([githubPush()])])
//git checkout stage
stage('scm connect(checkout)'){
git branch: 'development', credentialsId: '8c319b7f-a525-4c0b-832c-570d94efb017', url: 'https://github.com/sundar-vel/maven-web-application.git'
}//stage closing 

//maven build
stage('build stage'){
 sh"$mavenHome/bin/mvn clean package"
}//build stage closing

//sonar static code analysis report
stage('sonar report'){
    sh"$mavenHome/bin/mvn sonar:sonar"
}//sonar report close

//nexus artifact repo store
stage('store artifacte in nexu repo'){
    sh"$mavenHome/bin/mvn deploy"
}//close
//deply on Tomcat server
stage('deploy on tomcat'){
sshagent(['50e996a9-38e5-4516-832a-84f06ff47ba2']) {
   sh" scp -o StrictHostKeyChecking=no  target/maven-web-application.war ec2-user@43.204.236.34:/opt/apache-tomcat-9.0.80/webapps "
}
}

}//node closing
