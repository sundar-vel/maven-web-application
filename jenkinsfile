node{
buildName 'DEV - ${BUILD_NUMBER}'
buildDescription 'PIPline-script-scriptedway '
def mavenHome = tool name: "maven1"
echo "The node name is: ${env.NODE_NAME} "
echo "The job name is: ${env.JOB_NAME} "
echo "The job number is: ${env.BUILD_NUMBER} "
properties([buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5')), [$class: 'JobLocalConfiguration', changeReasonComment: ''], pipelineTriggers([githubPush()])])
//git checkout stage
stage('scm connect(checkout)'){
git branch: 'development', credentialsId: 'd69b6b7a-cfbb-43c1-bf31-083fd5966279', url: 'https://github.com/sundar-vel/maven-web-application.git'
}//stage closing 

//maven build
stage('build stage'){
 sh"$mavenHome/bin/mvn clean package"
}//build stage closing

//sonar static code analysis report
stage('sonar report'){
    sh"$mavenHome/bin/mvn sonar:sonar"
}//sonar report close

//nexus artifact repo store
stage('store artifacte in nexu repo'){
    sh"$mavenHome/bin/mvn deploy"
}//close
//deply on Tomcat server
stage('deploy on tomcat'){
sshagent(['4fba5582-709e-4daf-a0f0-a85a821a2111']) {
   sh" scp -o StrictHostKeyChecking=no  target/maven-web-application.war ec2-user@3.109.132.25:/opt/apache-tomcat-9.0.80/webapps "
}
}

}//node closing
